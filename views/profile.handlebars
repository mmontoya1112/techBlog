<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add a new tech entry:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">topic name:</label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" />
      </div>
      <div class="form-group">
        <label for="blog-desc">Description:</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
      </div>
       <div class="form-group">
        <label for="blog-links">links:</label>
        <textarea class="form-input" id="blog-links" name="blog-links"></textarea>
      </div>
       <div class="form-group">
        <label for="related-topics">related topics:</label>
        <textarea class="form-input" id="related-topics" name="related-topics"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-secondary"> submit </button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 project-list">
    <h3>Submitted entries:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a class="link" href="/blog/{{blog.id}}">{{blog.blog_name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-danger" data-id="{{blog.id}}"> DELETE </button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
