<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add a new tech entry:</h3>

    <form class="form new-recipe-form">
      <div class="form-group">
        <label for="recipe-name">topic name:</label>
        <input class="form-input" type="text" id="recipe-name" name="recipe-name" />
      </div>
      <div class="form-group">
        <label for="recipe-desc">Description:</label>
        <textarea class="form-input" id="recipe-desc" name="recipe-desc"></textarea>
      </div>
       <div class="form-group">
        <label for="recipe-ingredients">links:</label>
        <textarea class="form-input" id="recipe-ingredients" name="recipe-ingredients"></textarea>
      </div>
       <div class="form-group">
        <label for="recipe-directions">related topics:</label>
        <textarea class="form-input" id="recipe-directions" name="recipe-directions"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-secondary"> submit </button>
      </div>
    </form>
  </div>

  {{#if recipes.length}}
  <div class="col-md-6 project-list">
    <h3>Submitted entries:</h3>

    {{#each recipes as |recipe|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a class="link" href="/recipe/{{recipe.id}}">{{recipe.recipe_name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-danger" data-id="{{recipe.id}}"> DELETE </button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
